<% provide(:title, "Change password") %>
<section>
  <div class="container">
    <div class="row">
      <%= devise_error_messages! %>
      <div class="col-md-4 col-md-offset-4">
        <h2 class="text-blue text-center">Change your password</h2>
        <hr>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.hidden_field :reset_password_token %>
        <div class="form-group">
          <%= f.password_field :password, autofocus: true, autocomplete: "off", class: 'form-control input-lg', placeholder: 'New Password' %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em><br />
          <% end %>
        </div>
        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control input-lg', placeholder: 'Confirm new Password' %>
        </div>
        <div class="form-group">
          <%= f.submit "Change password", class: "btn btn-info btn-lg btn-block" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</section>