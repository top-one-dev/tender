<% provide(:title, "New Company") %>
<section style="min-height: 60vh;">
    <div class="container">
      <div class="row">
        <div class="col-md-8">
          <%= render 'form', company: @company %>
        </div>
        <div class="col-md-4">
          <div class="panel-group">
            <div class="panel panel-info">
              <div class="panel-heading dropdown">
                <a href="javascript:;" data-toggle="dropdown">Add Company <i class="glyphicon glyphicon-triangle-bottom pull-right"></i></a>
                <ul class="dropdown-menu">
                  <% Company.where(:user => current_user.id ).each do |company| %>
                    <li><%= link_to company.name, edit_company_path( company ) %></li>
                  <% end %>
                  <li class="divider"></li>
                  <li>
                    <%= link_to 'Add Company', new_company_path, class: 'btn btn-info add-company' %>
                  </li>
                </ul>
              </div>
              <div class="panel-body">
                <%= image_tag 'buyer/noimageCompany.gif', class: 'img-responsive', style: 'margin: 0 auto;' %>
              </div>
            </div>
            <div class="panel panel-success">
              <div class="panel-heading"><i class="glyphicon glyphicon-triangle-left"></i> Add Company</div>
            </div>
          </div>

          <hr>

          <div class="panel-group">
            <div class="panel panel-info">
              <div class="panel-heading">
                <%= link_to '<i class="glyphicon glyphicon-triangle-right"></i> Your profile'.html_safe, edit_user_registration_path %>
              </div>
            </div>

            <div class="panel panel-info">
              <div class="panel-heading"><i class="glyphicon glyphicon-triangle-right"></i> Notifications</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

