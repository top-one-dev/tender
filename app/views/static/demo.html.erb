<% provide(:title, "Demo") %>

<section>
	<div class="container">
		<br>
		<h2 class="text-blue text-center">Request a Demo</h2>
		<hr>
		<div class="row">
			<div class="col-sm-6">
				<p>
					In Just A few Minutes our Customer experience team can help you discover how Tenderbooks can streamline your procurement process and answer all your e-procurement related questions.<br>
					Tenderbooks is a software platform that helps you replace inefficient email and excel procurement methods with a standardized, transparent process that is easy for both buyers and suppliers.<br>
					<b>Please fill in the form and one of our procurement experts will contact you right away.</b>
				</p>
			</div>
			<div class="col-sm-6">
				<%= form_for :contact, method: 'GET' do |f| %>
				<div class="row">
					<div class="col-sm-6">
						<div class="form-group required">
							<label class="control-label">First Name</label>
							<%= f.text_field :first_name, class: 'form-control' %>
						</div>
					</div>
					<div class="col-sm-6">						
						<div class="form-group required">
							<label class="control-label">Last Name</label>
							<%= f.text_field :last_name, class: 'form-control' %>
						</div>
					</div>
					<div class="col-sm-6">						
						<div class="form-group required">
							<label class="control-label">Email</label>
							<%= f.text_field :email, class: 'form-control' %>
						</div>
					</div>
					<div class="col-sm-6">						
						<div class="form-group required">
							<label class="control-label">Phone Number</label>
							<%= f.text_field :phone, class: 'form-control' %>
						</div>
					</div>					
				</div>	
				<div class="row">
					<div class="col-xs-12">
						<div class="form-group required">
							<label class="control-label">Company Name</label>
							<%= f.text_field :company, class: 'form-control' %>
						</div>
						<div class="form-group required">
							<label class="control-label">Your role</label>
							<%= f.text_field :role, class: 'form-control' %>
						</div>
					</div>
				</div>
				<hr>
				<%= f.submit 'Request a Demo', class: 'btn btn-info' %>			
				<% end %>
				<br><br>
			</div>
		</div>
	</div>
</section>